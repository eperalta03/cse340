<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errorsInv) { %>
  <ul class="notice">
 <% errorsInv.array().forEach(errorI => { %>
   <li><%= errorI.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="deleteForm" action="/inv/delete" method="post">
    <fieldset>
        <label>Make <input type="text" name="inv_make" minlength="3" readonly required placeholder="Min of 3 characters" value="<%= locals.inv_make %>"></label>
        <label>Model <input type="text" name="inv_model" minlength="3" readonly required value="<%= locals.inv_model %>" placeholder="Min of 3 characters"></label>
        <label>Price <input type="number" name="inv_price" min="0" step="any" readonly required value="<%= locals.inv_price %>" placeholder="Decimal or integer"></label>
        <label>Year <input type="number" name="inv_year" min="1000" max="9999" step="1" readonly required value="<%= locals.inv_year %>" placeholder="4-digit year"></label>
        <p>Confirm Deletion - The delete is permanent.</p>
        <label>
            <input type="submit" value="Delete Vehicle">
        </label>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </fieldset>
</form>

